# ================================
# Crew Lounge - Environment Variables
# ================================
# Copy this file to .env and fill in your values

# ================================
# DATABASE (Choose ONE option)
# ================================

# Option 1: Supabase (Recommended for cloud)
# Get this from: Supabase Dashboard > Settings > Database > Connection string
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Option 2: Local PostgreSQL (for Docker development)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_NAME=crew_directory

# ================================
# APPLICATION
# ================================
NODE_ENV=development
PORT=3001

# ================================
# AUTHENTICATION
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ================================
# OPTIONAL: Supabase Auth (if using Supabase Auth)
# ================================
# SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
# SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ================================
# OPTIONAL: Mapbox (for maps)
# ================================
# VITE_MAPBOX_TOKEN=pk.your-mapbox-token
